#navbar.container-fluid.nav-wrapper.blendin
  .container
    mixin navlist
      ul.nav.nav-pills.pull-left
    mixin menulist
      ul.nav.nav-pills.pull-right.hidden-sm
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}') {{item.title}}
        li(ng-hide='currentUser', ng-class='{active: isActive(\'/login\')}')
          a(href='/login') Login
        li(ng-hide='currentUser', ng-class='{active: isActive(\'/signup\')}')
          a(href='/signup') Sign up
        li(ng-show='currentUser', ng-class='{active: isActive(\'/logout\')}')
          a(href='', ng-click='logout()') Logout
    mixin menu-toggle(varClasses)
      button.navbar-toggle.collapsed(class= varClasses, type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      
    .hidden-xs(ng-controller='NavbarCtrl')
      h3.text-muted ParlezVu
      +navlist()
      +menulist()
      +menu-toggle('visible-sm')

    +menu-toggle()
    h3.text-muted ParlezVu
    
